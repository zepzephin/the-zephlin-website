# mod_rewrite starts here

RewriteEngine on

# does not apply to existing directories, meaning that if the foler exists on the server then don't change anything and don't run the rule!

RewriteCond %{REQUEST_FILENAME} !-d

# Check for file in directory with .html extension

RewriteCond %{REQUST_FILENAME}\.hmtl -f

# Here we actually show the page that has the .html extension

RewriteRule ^(.*)$ $1.html [NC,L]
